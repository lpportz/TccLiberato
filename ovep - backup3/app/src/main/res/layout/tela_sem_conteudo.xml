<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?android:attr/windowBackground">

    <!-- Ícone ilustrativo -->
    <ImageView
        android:id="@+id/imageEmptyState"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logologin"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mensagem de texto -->
    <TextView
        android:id="@+id/textMensagemVazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum item encontrado."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageEmptyState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botão de ação -->
    <Button
        android:id="@+id/btnAcaoVazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar para home"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/textMensagemVazio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
