<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Container do texto (comentário + data) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/textComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <!-- Botão Editar Comentário -->
        <Button
            android:id="@+id/btnEditarComentario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/purple_500"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="8dp"
            android:text="Editar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp" />

        <!-- Botão Excluir Comentário -->
        <Button
            android:id="@+id/btnExcluirComentario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/red_700"
            android:drawableStart="@android:drawable/ic_delete"
            android:drawablePadding="8dp"
            android:text="Excluir"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
