<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Estilo para esconder texto do BottomNavigationView -->
    <style name="BottomNavEmptyText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">0sp</item>
        <item name="android:lineHeight" tools:targetApi="p">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Estilo customizado para o BottomNavigationView -->
    <style name="BottomNavCompact" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Altura mínima adequada para bottom nav -->
        <item name="android:minHeight">56dp</item>

        <!-- Remove elevação, se quiser -->
        <item name="elevation">4dp</item>
    </style>

    <!-- Tema do app que aplica o estilo do BottomNavigationView -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Outras configurações do tema -->

        <!-- Aplica o estilo BottomNavCompact a todos BottomNavigationView -->
        <item name="bottomNavigationStyle">@style/BottomNavCompact</item>
    </style>

    <!-- Botão filtro com fundo preenchido e texto branco -->
    <style name="ButtonFilter" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/brand_primary</item>
        <item name="strokeWidth">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.ButtonFilter</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="ShapeAppearanceOverlay.ButtonFilter" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
